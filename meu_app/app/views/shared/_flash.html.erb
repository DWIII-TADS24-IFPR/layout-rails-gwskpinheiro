<% flash.each do |key, value| %>
  <% next if value.blank? %>
  <% css =
      case key.to_s
      when "notice" then "bg-green-100 text-green-800 border-green-300"
      when "alert"  then "bg-yellow-100 text-yellow-800 border-yellow-300"
      when "error"  then "bg-red-100 text-red-800 border-red-300"
      else "bg-blue-100 text-blue-800 border-blue-300"
      end %>

  <div class="border px-4 py-3 rounded mb-4 <%= css %>">
    <%= value %>
  </div>
<% end %>
