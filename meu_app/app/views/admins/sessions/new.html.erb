<% content_for :title, "Entrar" %>

<div class="max-w-md mx-auto mt-16 card">
  <div class="card-body">
    <h1 class="text-xl font-bold text-center mb-6">Entrar</h1>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 block w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "mt-1 block w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
          <%= f.label :remember_me, "Lembrar-me", class: "ml-2 text-sm text-gray-700" %>
        </div>
      <% end %>

      <%= f.submit "Entrar", class: "btn-primary w-full" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600 space-y-2">
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "btn-link" %><br>
      <%= link_to "Criar conta", new_registration_path(resource_name), class: "btn-link" %>
    </div>
  </div>
</div>
