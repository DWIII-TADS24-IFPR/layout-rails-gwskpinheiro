<article id="<%= dom_id(post) %>" class="card h-full flex flex-col">
  <div class="card-body flex-1 flex flex-col">
    <div class="flex items-start justify-between gap-3">
      <h3 class="text-lg font-semibold text-gray-900"><%= post.title %></h3>
      <% if post.published? %>
        <span class="badge-green">Publicado</span>
      <% else %>
        <span class="badge-gray">Rascunho</span>
      <% end %>
    </div>

    <p class="mt-2 text-gray-600 line-clamp-3"><%= simple_format truncate(post.body, length: 180) %></p>

    <div class="mt-4 flex items-center justify-between text-xs text-gray-500">
      <span>Atualizado <%= time_ago_in_words(post.updated_at) %> atr√°s</span>
      <%= link_to "Ver detalhes", post, class: "btn-link" %>
    </div>
  </div>
</article>
